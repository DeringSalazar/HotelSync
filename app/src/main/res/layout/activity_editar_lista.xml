<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="Editar ubicación"
        app:titleTextColor="@android:color/white"
        android:elevation="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Código -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Código">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCodigoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nombre">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNombreEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cédula empleado -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Cédula empleado">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCedulaEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Latitud -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Latitud">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtLatEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Longitud -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Longitud">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtLonEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botones Actualizar / Eliminar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnActualizar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/exchange_5355188"
                    app:iconTint="@null"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:layout_weight="1"
                    android:text="Actualizar"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/zerowaste_10203796"
                    app:iconTint="@null"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    android:layout_weight="1"
                    android:text="Eliminar"/>
            </LinearLayout>

            <!-- Imagen -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/imgFotoEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#DDDDDD"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botón Cambiar Foto -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCambiarFoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:icon="@drawable/photo_camera_24"
                app:iconTint="@null"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:text="Cambiar Foto"/>

            <!-- Botón Grabar Audio -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGrabarAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:icon="@drawable/record_7930024"
                app:iconTint="@null"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:text="Grabar Audio"/>

            <!-- Botón Detener -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetenerAudio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:icon="@drawable/silent_5470936"
                app:iconTint="@null"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:text="Detener"
                android:visibility="gone"/>

            <!-- Botón Reproducir -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReproducirAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:icon="@drawable/rewind_4428747"
                app:iconTint="@null"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:text="Reproducir Audio"/>

            <!-- Mapa -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp">

                <org.osmdroid.views.MapView
                    android:id="@+id/mapEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
