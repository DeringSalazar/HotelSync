<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CÃ“DIGO -->
    <EditText
        android:id="@+id/txtCodigoEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CÃ³digo"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- NOMBRE -->
    <EditText
        android:id="@+id/txtNombreEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtCodigoEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CÃ‰DULA -->
    <EditText
        android:id="@+id/txtCedulaEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="CÃ©dula empleado"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtNombreEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LATITUD -->
    <EditText
        android:id="@+id/txtLatEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Latitud"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtCedulaEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- LONGITUD -->
    <EditText
        android:id="@+id/txtLonEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Longitud"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtLatEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- BOTONES ACTUALIZAR / ELIMINAR -->
    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtLonEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEliminar" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Eliminar"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/txtLonEdit"
        app:layout_constraintStart_toEndOf="@id/btnActualizar"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FOTO -->
    <ImageView
        android:id="@+id/imgFotoEdit"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="12dp"
        android:background="#DDDDDD"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/btnActualizar"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- BOTÃ“N CAMBIAR FOTO -->
    <Button
        android:id="@+id/btnCambiarFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“¸ Cambiar Foto"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="@id/imgFotoEdit"
        app:layout_constraintStart_toEndOf="@id/imgFotoEdit"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GRABAR AUDIO -->
    <Button
        android:id="@+id/btnGrabarAudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸŽ™ï¸ Grabar Audio"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/btnCambiarFoto"
        app:layout_constraintStart_toEndOf="@id/imgFotoEdit"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- DETENER AUDIO -->
    <Button
        android:id="@+id/btnDetenerAudio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="â¹ Detener"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnGrabarAudio"
        app:layout_constraintStart_toEndOf="@id/imgFotoEdit"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- REPRODUCIR AUDIO -->
    <Button
        android:id="@+id/btnReproducirAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â–¶ Reproducir Audio"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgFotoEdit"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- MAPA -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapEdit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnReproducirAudio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
