<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/searchUbicaciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Buscar ubicación..."
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Selección"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/searchUbicaciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ListView
        android:id="@+id/listUbicaciones2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:divider="#BBBBBB"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/btnEditar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
