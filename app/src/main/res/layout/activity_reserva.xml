<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6F8"
    tools:context=".ReservaActivity">

    <!-- LinearLayout padre que contiene la tarjeta -->
    <LinearLayout
        android:id="@+id/tarjetaRegistro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TARJETA DE REGISTRO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Datos huÃ©sped -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/labelDatosHuesped"
                android:textColor="#444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerCedulas"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="#FFFFFF"/>

            <!-- Nombre y Apellido en la misma fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:hint="@string/labelNombre"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/txtApellido"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:hint="@string/labelApellido"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Detalles de la reserva -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/labelDetalleReserva"
                android:textColor="#444"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinnerHabitaciones"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF" />

            <!-- Fechas a la par -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/txtInicio"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:hint="@string/edittextFechainicio"
                    android:padding="8dp" />

                <EditText
                    android:id="@+id/txtFin"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:hint="@string/edittextFechaFin"
                    android:padding="8dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/txtCantidad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:background="#FFFFFF"
                android:hint="@string/edittexCantHabi"
                android:inputType="number"
                android:padding="8dp" />

            <!-- BOTONES CRUD -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnReservar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#673AB7"
                    android:text="@string/btnReservar"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#673AB7"
                    android:text="@string/btnEditarReserHuspe"
                    android:textColor="#FFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#673AB7"
                    android:text="@string/btnEliminar"
                    android:textColor="#FFF" />

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="#757575"
                    android:onClick="Volver"
                    android:text="@string/btnRegresar"
                    android:textColor="#FFF" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:dividerHeight="1dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tarjetaRegistro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
