<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F6F8"
    tools:context=".Usuarios">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/titleUser"
                android:textColor="#070707"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/labelRol"
                android:textColor="#070707"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroupRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbHuesped"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="HuÃ©sped"
                    android:textColor="#070707" />

                <RadioButton
                    android:id="@+id/rbEmpleado"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Empleado"
                    android:textColor="#070707" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/labelCedula"
                        android:textColor="#070707"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtCedula"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#FFFFFF"
                        android:hint="@string/editTextCedula"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="#070707" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/labelNombre"
                        android:textColor="#070707"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtNombre"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#FFFFFF"
                        android:hint="@string/editTextNombre"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="#070707" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/labelApellido"
                        android:textColor="#070707"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtApellido"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#FFFFFF"
                        android:hint="@string/editTextApellido"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textColor="#070707" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/labelTelefono"
                        android:textColor="#070707"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtTelefono"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="#FFFFFF"
                        android:hint="@string/editTextTelefono"
                        android:inputType="phone"
                        android:padding="8dp"
                        android:textColor="#070707" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/labelCorreo"
                    android:textColor="#070707"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#FFFFFF"
                    android:hint="@string/editTextCorreo"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColor="#070707" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnInsertar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:text="@string/btnInsertar" />

                <Button
                    android:id="@+id/btnBuscar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:text="@string/btnBuscar" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnActualizar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="6dp"
                    android:layout_weight="1"
                    android:text="@string/btnActualizar" />

                <Button
                    android:id="@+id/btnEliminar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:text="@string/btnEliminar" />
            </LinearLayout>

            <Button
                android:id="@+id/btnRegresar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:onClick="Volver"
                android:text="@string/btnRegresar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/listTitle"
                android:textColor="#070707"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/listViewUsuarios"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="#FFFFFF"
                android:dividerHeight="1dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
