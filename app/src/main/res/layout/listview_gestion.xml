<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgHabitacion"
        android:layout_width="131dp"
        android:layout_height="121dp"
        android:scaleType="centerCrop"
        android:src="@drawable/habitacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imgHabitacion"
        app:layout_constraintTop_toTopOf="@id/imgHabitacion"
        app:layout_constraintBottom_toBottomOf="@id/imgHabitacion"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código: R00000000"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/txtEmpleado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empleado: EMP001"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtHuesped"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Huésped: 1"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Confirmada"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- ✔ Cambiado -->
        <TextView
            android:id="@+id/txtFechaInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio: 01/01/2026"
            android:textSize="14sp"
            android:textColor="#555555" />

        <!-- ✔ Cambiado -->
        <TextView
            android:id="@+id/txtFechaFin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fin: 01/02/2026"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: ₡0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
