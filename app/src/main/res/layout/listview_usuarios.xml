<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgUsuario"
        android:layout_width="95dp"
        android:layout_height="76dp"
        android:contentDescription="Usuario"
        android:src="@drawable/user_h"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNombreApellido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre Apellido"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/imgUsuario"
        app:layout_constraintTop_toTopOf="@id/imgUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/txtCedula"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CÃ©dula: 123456789"
        android:textSize="14sp"
        android:textColor="#424242"
        app:layout_constraintTop_toBottomOf="@id/txtNombreApellido"
        app:layout_constraintStart_toStartOf="@id/txtNombreApellido"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtTelefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tel: 8888-8888"
        android:textSize="14sp"
        android:textColor="#424242"
        app:layout_constraintTop_toBottomOf="@id/txtCedula"
        app:layout_constraintStart_toStartOf="@id/txtCedula"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtCorreo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="correo@example.com"
        android:textSize="14sp"
        android:textColor="#424242"
        app:layout_constraintTop_toBottomOf="@id/txtTelefono"
        app:layout_constraintStart_toStartOf="@id/txtTelefono"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
